<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity" tools:layout_editor_absoluteY="6dp" tools:layout_editor_absoluteX="-62dp">

    <Button
            android:text="Play Again"
            android:layout_width="match_parent"
            app:cornerRadius="12dp"
            android:layout_height="wrap_content" android:id="@+id/play_again"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" android:textStyle="bold" android:padding="20dp"
            android:layout_margin="30dp" app:layout_constraintBottom_toTopOf="@+id/exit"
            android:layout_marginBottom="40dp"/>
    <Button
            android:text="Exit"
            android:layout_width="match_parent"
            app:cornerRadius="12dp"
            android:layout_height="wrap_content" android:id="@+id/exit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" android:textStyle="bold" android:padding="20dp"
            android:layout_margin="30dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="156dp"
    />
    <ImageView
            android:layout_width="96dp"
            android:layout_height="91dp" app:srcCompat="@mipmap/score_icon_foreground"
            android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/play_again"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/score_count"
            android:textSize="34sp" android:text="0" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/imageView9"/>
    <TextView
            android:text="Your Score"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textStyle="bold" android:textSize="30sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            android:layout_width="0dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/play_again"/>
</androidx.constraintlayout.widget.ConstraintLayout>